# =========================
# RATU SOVEREIGN AI - ENV CONFIG
# =========================

APP_NAME=Ratu
NODE_ENV=development

# =========================
# DATABASE & STORAGE
# =========================
POSTGRES_URL=postgres://USER:PASS@HOST:PORT/DB
REDIS_URL=redis://HOST:6379

# Object Storage (S3-compatible)
OBJECT_STORE_URL=s3://BUCKET
OBJECT_STORE_REGION=us-east-1
OBJECT_STORE_ACCESS_KEY=YOUR_ACCESS_KEY
OBJECT_STORE_SECRET_KEY=YOUR_SECRET_KEY

# =========================
# LLM - KIMI K2 (BASE MODEL)
# =========================
KIMI_K2_API_BASE=https://api.moonshot.cn/v1
KIMI_K2_API_KEY=YOUR_KIMI_K2_KEY
KIMI_K2_MODEL=moonshot-v1-128k
KIMI_K2_MAX_TOKENS=4096
KIMI_K2_TEMPERATURE=0.4

# =========================
# EMBEDDINGS
# =========================
EMBEDDINGS_PROVIDER=openai
EMBEDDINGS_API_BASE=https://api.openai.com/v1
EMBEDDINGS_API_KEY=YOUR_EMBEDDINGS_KEY
EMBEDDINGS_MODEL=text-embedding-3-large
EMBEDDINGS_DIMENSIONS=1536

# =========================
# VECTOR DATABASE
# =========================
VECTOR_DB_PROVIDER=qdrant
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_KEY=YOUR_QDRANT_KEY
VECTOR_DB_COLLECTION_PREFIX=ratu_

# =========================
# VOICE (OPTIONAL)
# =========================
STT_PROVIDER=openai
STT_API_KEY=YOUR_STT_KEY
STT_MODEL=whisper-1

TTS_PROVIDER=openai
TTS_API_KEY=YOUR_TTS_KEY
TTS_MODEL=tts-1
TTS_VOICE=alloy

# =========================
# APPLICATION URLS
# =========================
PUBLIC_BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3001
CONSOLE_BASE_URL=http://localhost:3002
DASHBOARD_BASE_URL=http://localhost:3003

# =========================
# SECURITY
# =========================
JWT_SECRET=CHANGE_ME_TO_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRES_IN=7d
API_KEY_SALT=CHANGE_ME_TO_RANDOM_STRING
ADMIN_EMAIL=admin@tejos.co
ADMIN_PASSWORD=CHANGE_ME

# =========================
# RATE LIMITING
# =========================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =========================
# WORKER QUEUES
# =========================
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5

# =========================
# MONITORING & LOGGING
# =========================
LOG_LEVEL=info
SENTRY_DSN=
METRICS_ENABLED=true

# =========================
# FEATURE FLAGS
# =========================
DEMO_MODE=false
ENABLE_VOICE=true
ENABLE_COUNCIL=true
ENABLE_DISCOVERY=true
ENABLE_ANALYTICS=true

# =========================
# CRAWLING
# =========================
CRAWLER_USER_AGENT=RatuBot/1.0 (+https://ratu.ai/bot)
CRAWLER_MAX_DEPTH=3
CRAWLER_MAX_PAGES=1000
CRAWLER_DELAY_MS=1000
CRAWLER_TIMEOUT_MS=30000

# =========================
# COSTS (USD per unit)
# =========================
COST_PER_1K_INPUT_TOKENS=0.001
COST_PER_1K_OUTPUT_TOKENS=0.002
COST_PER_EMBEDDING=0.0001
COST_PER_STT_MINUTE=0.006
COST_PER_TTS_CHAR=0.000015